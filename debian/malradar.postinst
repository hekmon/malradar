#!/bin/sh

set -e

case "$1" in
		configure)
				adduser --system --disabled-password --disabled-login --create-home --home /var/lib/malradar --quiet --force-badname --group "malradar"
				chown :malradar /etc/malradar/config.json
				chmod 640 /etc/malradar/config.json
				;;
esac

#DEBHELPER#

exit 0
